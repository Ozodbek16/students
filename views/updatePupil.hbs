<div class="container">
    <form style="margin-top: 40px;" action="/pupil/edit/{{id}}">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input required type="text" name="name" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" value="{{pupil.name}}">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Surname</label>
            <input required type="text" name="surname" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" value="{{pupil.surname}}">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Number</label>
            <input required type="number" name="number" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" value="{{pupil.number}}">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Group</label>
            <input required type="number" name="group" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" value="{{pupil.group}}">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Month</label>
            <input required type="number" max="9" min="1" name="month" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" value="{{pupil.month}}">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Score</label>
            <input required type="number" name="score" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" value="{{pupil.score}}">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
