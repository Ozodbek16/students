<div class="container">
    {{#if pupils}}
    <table style="margin-top: 40px;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Number</th>
                <th>Group</th>
                <th>Month</th>
                <th>Score</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            {{#each pupils}}
            <tr>
                <td class="hove_td">{{name}} <a href="/pupil/del/{{id}}" class="none_style"><i
                            class="fa-solid fa-square-minus"></i></a></td>
                <td>{{surname}}</td>
                <td>{{number}}</td>
                <td>{{group}}</td>
                <td>{{month}}</td>
                <td class="hove_td">
                    {{score}}
                    <button class="none">
                        <i class="fa-solid fa-square-plus"></i>
                    </button>
                    <form action="/pupil/score/add/{{id}}" class="absolut_form" style="display: none;">
                        <input type="number" name="score" required
                            oninvalid="this.setCustomValidity('Bu joy bo\'sh bo\'lishi mumkin emas!')"
                            oninput="this.setCustomValidity('')" placeholder="Write the score">
                        <button>Submit</button>
                        <button class="exit"><i class="fa-solid fa-xmark"></i></button>
                    </form>
                </td>
                <td><a href="/pupil/update/{{id}}"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2 style="text-align: center; margin-top: 50px;">No students</h2>
    {{/if}}
</div>

<a href="/pupils/add" class="btn btn-primary"
    style="display: block; margin: auto; width: max-content; margin-top: 50px;">Add new pupil</a>


